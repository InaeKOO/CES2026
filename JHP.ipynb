# ---------------------------------------------------------
# 1. 환경 설정 및 시드 고정
# ---------------------------------------------------------
TARGET_SEED = 0

def set_seed(seed):
    random.seed(seed)
    np.random.seed(seed)
    torch.manual_seed(seed)
    if torch.cuda.is_available():
        torch.cuda.manual_seed(seed)
        torch.cuda.manual_seed_all(seed)
        torch.backends.cudnn.deterministic = True
        torch.backends.cudnn.benchmark = False
    print(f"Seed fixed to {seed}.")

device = torch.device('cuda' if torch.cuda.is_available() else 'cpu')

# ---------------------------------------------------------
# 2. iTransformer 모델 정의
# ---------------------------------------------------------
class iTransformerLayer(nn.Module):
    def __init__(self, d_model, nhead, dim_feedforward, dropout=0.1):
        super(iTransformerLayer, self).__init__()
        self.self_attn = nn.MultiheadAttention(d_model, nhead, dropout=dropout, batch_first=True)
        self.linear1 = nn.Linear(d_model, dim_feedforward)
        self.dropout = nn.Dropout(dropout)
        self.linear2 = nn.Linear(dim_feedforward, d_model)
        self.norm1 = nn.LayerNorm(d_model)
        self.norm2 = nn.LayerNorm(d_model)
        self.dropout1 = nn.Dropout(dropout)
        self.dropout2 = nn.Dropout(dropout)
        self.activation = nn.GELU()

    def forward(self, src):
        # src: (Batch, Num_Variates, Time_Length) -> iTransformer는 Time 전체를 임베딩으로 씀
        src2 = self.self_attn(src, src, src)[0]
        src = src + self.dropout1(src2)
        src = self.norm1(src)
        src2 = self.linear2(self.dropout(self.activation(self.linear1(src))))
        src = src + self.dropout2(src2)
        src = self.norm2(src)
        return src

class iTransformer(nn.Module):
    def __init__(self, num_variates, lookback_len, d_model=128, nhead=4, num_layers=2):
        super(iTransformer, self).__init__()
        # [핵심] Time Series 전체 길이(Lookback)를 임베딩 차원(d_model)으로 변환
        self.enc_embedding = nn.Linear(lookback_len, d_model)
        self.layers = nn.ModuleList([
            iTransformerLayer(d_model, nhead, d_model*2) for _ in range(num_layers)
        ])
        # 출력: 각 변수(주식)별로 하나의 점수(상승확률/수익률) 예측
        self.projection = nn.Linear(d_model, 1) 

    def forward(self, x):
        # x input shape: (Batch, Time, Variates)
        # 1. iTransformer 핵심: (Batch, Variates, Time)으로 전치
        x = x.permute(0, 2, 1) 
        
        # 2. Time axis 전체를 임베딩
        x_enc = self.enc_embedding(x) # (Batch, Variates, d_model)
        
        # 3. Transformer Encoder 통과 (변수 간 상관관계 학습)
        for layer in self.layers:
            x_enc = layer(x_enc)
            
        # 4. 예측 (Batch, Variates, 1)
        out = self.projection(x_enc)
        return out.squeeze(-1) # (Batch, Variates)

# ---------------------------------------------------------
# 3. 데이터 전처리 (Rolling Normalization - Data Leakage 방지)
# ---------------------------------------------------------
def create_rolling_dataset(data_values, lookback=60, horizon=1, target_col_start=3):
    X, y = [], []
    if len(data_values) <= lookback + horizon:
        return np.array([]), np.array([])
    
    # 타겟(주식)의 개수 확인 (매크로 지표 제외)
    num_stocks = data_values.shape[1] - target_col_start

    for i in range(len(data_values) - lookback - horizon):
        # 입력 윈도우 (과거 60일)
        raw_window = data_values[i : i + lookback]
        
        # [중요] 윈도우 내부 정규화 (Instance Normalization)
        # 각 변수별로 평균 0, 분산 1로 맞춤 -> 시계열의 추세 제거하고 패턴만 남김
        mean = np.mean(raw_window, axis=0, keepdims=True)
        std = np.std(raw_window, axis=0, keepdims=True) + 1e-6
        norm_window = (raw_window - mean) / std
        
        X.append(norm_window)
        
        # 타겟: 다음날 수익률 랭킹
        curr_price = data_values[i + lookback - 1, target_col_start:]
        next_price = data_values[i + lookback + horizon - 1, target_col_start:]
        
        # 수익률 계산
        ret = (next_price - curr_price) / (curr_price + 1e-8)
        ret = np.nan_to_num(ret)
        
        # 상대 순위(Rank)를 타겟으로 (0.0 ~ 1.0)
        # 수익률이 높을수록 1에 가깝게
        rank = np.argsort(np.argsort(ret))
        label = rank / (num_stocks - 1) 
        y.append(label)
        
    return np.array(X), np.array(y)

# ---------------------------------------------------------
# 4. 시뮬레이션 및 학습 로직
# ---------------------------------------------------------
def run_jhp_strategy(seed_val):
    set_seed(seed_val)
    print("\n[JHP Bot 2.0] Initializing iTransformer Strategy with VIX Defense...")

    # 1. 데이터 다운로드 (10종목 + 매크로)
    stocks = ['META', 'TSLA', 'NFLX', 'NVDA', 'PLTR', 'MSFT', 'GOOG', 'AAPL', 'AVGO', 'AMZN']
    macros = ['^TNX', '^VIX', 'DX-Y.NYB'] # 금리, 공포지수, 달러인덱스
    tickers = macros + stocks
    
    end_date = datetime.today()
    start_date = end_date - timedelta(days=365*6) # 넉넉하게 6년
    
    print("Downloading Data...")
    data_raw = yf.download(tickers, start=start_date, end=end_date, progress=False)
    if isinstance(data_raw.columns, pd.MultiIndex):
        closes = data_raw['Close']
    else:
        closes = data_raw['Close']
    
    closes = closes.fillna(method='ffill').fillna(method='bfill')
    
    # QQQ Benchmark
    qqq = yf.download('QQQ', start=start_date, end=end_date, progress=False)['Close']
    if isinstance(qqq, pd.DataFrame): qqq = qqq.iloc[:, 0]

    # Train / Test Split
    test_days = 365 * 2 # 최근 2년 테스트
    test_start_date = closes.index[-test_days]
    train_df = closes.loc[:test_start_date]
    
    # 2. 모델 학습
    print("Training iTransformer Model...")
    train_values = train_df.values
    # macros가 3개이므로 stock_idx_start=3
    X_train, y_train = create_rolling_dataset(train_values, lookback=60, target_col_start=len(macros))
    
    inputs = torch.tensor(X_train, dtype=torch.float32).to(device)
    labels = torch.tensor(y_train, dtype=torch.float32).to(device)
    
    model = iTransformer(num_variates=len(tickers), lookback_len=60).to(device)
    optimizer = torch.optim.AdamW(model.parameters(), lr=0.001)
    criterion = nn.MSELoss() # Rank 점수(0~1) 맞추기

    model.train()
    epochs = 50
    for epoch in range(epochs):
        optimizer.zero_grad()
        preds = model(inputs) # (Batch, All_Variates)
        # 주식 부분(3열 이후)만 잘라서 Loss 계산
        stock_preds = preds[:, len(macros):] 
        loss = criterion(stock_preds, labels)
        loss.backward()
        optimizer.step()
        if (epoch+1) % 10 == 0:
            print(f"  Epoch {epoch+1}/{epochs} | Loss: {loss.item():.5f}")

    # 3. 백테스팅 (월간 리밸런싱 + VIX 방어)
    print("Starting Backtest...")
    initial_capital = 10000.0
    capital = initial_capital
    history = []
    dates = []
    log_entries = [] # 상세 로그용
    
    current_date = test_start_date
    qqq_ma120 = qqq.rolling(window=120).mean() # 120일선 사용 (반응속도 Up)

    while current_date < end_date:
        next_date = current_date + relativedelta(months=1)
        if next_date > end_date: next_date = end_date
        
        str_curr = current_date.strftime('%Y-%m-%d')
        str_next = next_date.strftime('%Y-%m-%d')
        
        # --- [방어 로직 1] VIX & Trend Check ---
        try:
            curr_idx = closes.index.get_indexer([current_date], method='pad')[0]
            curr_vix = closes['^VIX'].iloc[curr_idx]
            
            q_idx = qqq.index.get_indexer([current_date], method='pad')[0]
            curr_qqq = qqq.iloc[q_idx]
            curr_ma = qqq_ma120.iloc[q_idx]
            
            # Defensive Condition
            # 1. VIX가 30을 넘으면 초비상 -> 100% 현금
            # 2. QQQ가 120일선 아래면 하락장 -> 100% 현금
            is_crisis = (curr_vix > 30) or (curr_qqq < curr_ma)
        except:
            is_crisis = False # 데이터 부족시 공격

        if is_crisis:
            # 현금 보유 (수익률 0 가정)
            history.append(capital)
            dates.append(next_date)
            log_entries.append([next_date, "DEFENSE_MODE", 0, 0, 0])
            current_date = next_date
            continue

        # --- [공격 로직] iTransformer Selection ---
        try:
            # Inference 데이터 준비
            train_slice = closes.loc[:str_curr]
            if len(train_slice) < 60:
                current_date = next_date; continue
                
            raw_window = train_slice.iloc[-60:].values
            mean = np.mean(raw_window, axis=0, keepdims=True)
            std = np.std(raw_window, axis=0, keepdims=True) + 1e-6
            norm_window = (raw_window - mean) / std
            
            input_tensor = torch.tensor(norm_window, dtype=torch.float32).unsqueeze(0).to(device) # (1, 60, 13)
            
            model.eval()
            with torch.no_grad():
                preds = model(input_tensor).cpu().numpy()[0] # (13,)
            
            # 주식 점수만 추출
            stock_preds = preds[len(macros):]
            top_indices = np.argsort(stock_preds)[-3:] # 상위 3개 인덱스
            top_tickers = [stocks[i] for i in top_indices]
            
            # --- [비중 조절] Volatility Inverse Weighting ---
            # 최근 60일 변동성(Standard Deviation) 계산
            recent_vol = std[0, len(macros):] # 주식들의 std
            selected_vols = recent_vol[top_indices]
            
            # 변동성이 작을수록 비중을 높게 (Inverse)
            inv_vols = 1.0 / selected_vols
            weights = inv_vols / np.sum(inv_vols)
            
            # 수익률 계산
            period_prices = closes.loc[str_curr:str_next, top_tickers]
            if len(period_prices) > 0:
                period_ret = (period_prices.iloc[-1] - period_prices.iloc[0]) / period_prices.iloc[0]
                # 가중 평균 수익률
                port_ret = np.sum(period_ret * weights)
                capital = capital * (1 + port_ret)
                
            log_entries.append([next_date] + top_tickers + [f"W:{weights.round(2)}"])

        except Exception as e:
            print(f"Error: {e}")
            pass
            
        history.append(capital)
        dates.append(next_date)
        current_date = next_date

    return history, dates, qqq, log_entries

# ---------------------------------------------------------
# 5. 결과 시각화
# ---------------------------------------------------------
def plot_results(history, dates, qqq, logs):
    # QQQ Benchmark Normalize
    idx_start = qqq.index.get_indexer([dates[0]], method='pad')[0]
    qqq_bench = qqq.iloc[idx_start:]
    qqq_bench = qqq_bench.reindex(dates, method='pad')
    qqq_norm = qqq_bench / qqq_bench.iloc[0] * history[0]
    
    final_my = history[-1]
    final_q = qqq_norm.iloc[-1]
    
    plt.figure(figsize=(12, 6))
    plt.plot(dates, history, label=f'JHP 2.0 (Defense) ${final_my:,.0f}', color='blue', linewidth=2)
    plt.plot(dates, qqq_norm, label=f'QQQ Benchmark ${final_q:,.0f}', color='gray', linestyle='--')
    plt.title("JHP 2.0: iTransformer + VIX Defense Strategy")
    plt.legend()
    plt.grid(True, alpha=0.3)
    plt.show()
    
    print("\n[Recent Trades Log]")
    for log in logs[-5:]:
        print(log)

if __name__ == "__main__":
    h, d, q, l = run_jhp_strategy(TARGET_SEED)
    plot_results(h, d, q, l)
